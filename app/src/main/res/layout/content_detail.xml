<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_detail"
    tools:context="com.example.chrisgao.testapplication.DetailActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:columnCount="6"
        android:rowCount="8"
        android:textAlignment="center"
        android:touchscreenBlocksFocus="false"
        android:useDefaultMargins="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单号："
            android:id="@+id/textView"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="bottom|fill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/codeText"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_gravity="fill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫描数："
            android:id="@+id/textView3"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/scanQtyText"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_gravity="fill" />

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="5"
            android:indeterminate="false"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:secondaryProgressTintMode="src_over"
            android:secondaryProgressTint="#FFFF00"
            android:secondaryProgress="10"
            android:progressTint="#FF0000"
            android:progressTintMode="src_in"
            android:progress="30" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan"
            android:id="@+id/scanButton"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_gravity="fill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品"
            android:id="@+id/textView5"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:id="@+id/textView6"
            android:layout_row="6"
            android:layout_column="3"
            android:layout_columnSpan="3"
            android:layout_gravity="fill" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView2"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:layout_gravity="fill" />

    </GridLayout>

</RelativeLayout>
